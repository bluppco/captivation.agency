---

// IMPORT ASTRO ATOMS
import ButtonArrowLgAccent from "@/atoms-diksha/buttons/arrow-button/lg/accent/index.astro"
import HeadingFourTwoXlSemiboldWhite from "@/atoms-diksha/headings/four/2xl/semibold/white/index.astro"
import Link from "@/atoms/links/index.astro"
import ParagraphLgLightWhite from "@/atoms-diksha/paragraphs/lg/light/white/index.astro"
import Picture from "@/atoms/picture/internal/index.astro"

// GET ASTRO PROPS
const {

    button_text,
    image_source,
    subtitle,
    title,

} = Astro.props

---

<div class="flex flex-col gap-6">
    <div class="group relative overflow-hidden w-[440px] border-2 border-white rounded-lg">
        <div class="transform transition-transform duration-300 delay-150 ease-in-out group-hover:scale-105">
            <Picture 
                source={ image_source } 
                alternative_text={ title }
            />
        </div>
    </div>
    <div>
        <HeadingFourTwoXlSemiboldWhite>{ title }</HeadingFourTwoXlSemiboldWhite>
        <ParagraphLgLightWhite>{ subtitle }</ParagraphLgLightWhite>        
    </div>
    <Link 
        source="/"
        aria_label="page"
    >
        <ButtonArrowLgAccent>{ button_text }</ButtonArrowLgAccent>
    </Link>
</div>
